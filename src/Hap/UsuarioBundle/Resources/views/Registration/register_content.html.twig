{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_registration_register") }}" method="post" class="form-signin">
        

        <h2 class="form-signin-heading">Registrar Usuario</h2>

        <label for="fos_user_registration_form_name" class="required">Nombre</label>
        <input type="text" id="fos_user_registration_form_name" name="fos_user_registration_form[name]" placeholder="Nombre" pattern=".{2,}" class="form-control" required autofocus />

        
        <label for="fos_user_registration_form_email" class="required">Correo Electrónico</label>
        <input type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" placeholder="Email" class="form-control" required autofocus />

        <label for="fos_user_registration_form_username" class="required">Usuario</label>
        <input type="text" id="fos_user_registration_form_username" name="fos_user_registration_form[username]" placeholder="Usuario" pattern=".{2,}" class="form-control" required autofocus />

        <label class="required" for="fos_user_registration_form_plainPassword_first"> Contraseña</label>
        <input type="password" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" class="form-control" placeholder="Contraseña" required />

        <label class="required" for="fos_user_registration_form_plainPassword_second"> Repita Contraseña</label>
        <input type="password" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" class="form-control" placeholder="Contraseña" required />

        <input type="hidden" name="_csrf_token" value="{{  csrf_token('authenticate') }}" />

        <input type="submit"
               class="btn btn-lg btn-primary btn-block"
               id="_submit"
               name="_submit"
               value="{{ 'registration.submit'|trans }}" />
        
    </form>


